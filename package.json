{
  "name": "yao-tools",
  "version": "1.0.0",
  "description": "前端工具函数和方法",
  "license": "MIT",
  "author": "yaoyao1987 <ly.yao@shunwang.com>",
  "repository": "https://github.com/yaoyao1987/yao-tools.git",
  "main": "lib/index.js",
  "module": "es/index.esm.js",
  "browser": "dist/index.js",
  "unpkg": "dist/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "es",
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist lib es testcoverage",
    "dev": "yarn clean && cross-env NODE_ENV=development rollup -c build/rollup.config.js",
    "build": "yarn clean && cross-env NODE_ENV=production rollup -c build/rollup.config.js",
    "docs": "typedoc --options typedoc.json",
    "lint": "eslint --ext .ts src --max-warnings 5",
    "lint:fix": "eslint --fix --ext .ts src --max-warnings 5",
    "prettier": "prettier -c --write ./src",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest  --config jest.config.js --coverage || exit 0",
    "test:update": "jest --config jest.config.js --updateSnapshot",
    "cz:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "cz:commit": "git-cz"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-typescript": "^7.12.13",
    "@babel/runtime": "^7.13.9",
    "@babel/runtime-corejs3": "^7.13.9",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "commitizen": "^4.2.2",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^6.3.0",
    "docdash": "^1.2.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rollup": "^2.34.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.0",
    "typedoc": "^0.20.23",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "*.{.ts}": [
      "prettier --write",
      "eslint --fix --ext .ts src --max-warnings 5",
      "jest --config jest.config.js"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  }
}
